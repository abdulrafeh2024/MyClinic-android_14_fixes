<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.telemedicine.myclinic.activities.AppointmentBookingRegisterActivity">

    <include
        android:id="@+id/register_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/register_toolbar"
        android:background="@drawable/register_bg"
        android:foreground="@color/colorGreyAlphaLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_toolbar">

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">

            <com.telemedicine.myclinic.views.RegularTextView
                android:id="@+id/sign_up_tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/confirm_your_appointment"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.telemedicine.myclinic.views.LightTextView
                android:id="@+id/lower_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_up_tv"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/review_your_schedule_and_confirm"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/sign_up_tv"
                app:layout_constraintStart_toStartOf="@id/sign_up_tv"
                app:layout_constraintEnd_toEndOf="@id/sign_up_tv"/>

            <RelativeLayout
                android:id="@+id/image_container"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_below="@+id/container_appoint_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lower_title_tv">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/doctor_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/doctr"
                    app:civ_border_color="@color/colorGrey"
                    app:civ_border_width="1dp" />

            </RelativeLayout>

            <com.telemedicine.myclinic.views.BoldTextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_container"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:includeFontPadding="false"
                android:layout_marginEnd="20dp"
                tools:text="Dr . Sawsan Abdul Dayem"
                android:textColor="@color/colorPrussianBlue"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_container" />


            <com.telemedicine.myclinic.views.LightTextView
                android:id="@+id/doctor_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/company_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:maxLines="1"
                android:includeFontPadding="false"
                tools:text="Obstetrics &amp; Gynecology Specialist"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/doctor_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="11sp" />

            <com.telemedicine.myclinic.views.BoldTextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_profession"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:includeFontPadding="false"
                android:layout_marginEnd="20dp"
                tools:text="Al Safa"
                android:textColor="@color/colorPrussianBlue"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doctor_profession" />


            <com.telemedicine.myclinic.views.LightTextView
                android:id="@+id/datetime_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                tools:text="08-02-2019, 04:00 PM"
                android:maxLines="1"
                android:letterSpacing="0.02"
                app:layout_constraintTop_toBottomOf="@+id/location_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/colorPrussianBlue"
                android:textSize="18sp" />

            <com.telemedicine.myclinic.views.LightButton
                android:id="@+id/modifyBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/datetime_value"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:text="@string/modify"
                android:onClick="onModify"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/datetime_value"
                app:layout_constraintStart_toStartOf="@+id/datetime_value"
                app:layout_constraintTop_toBottomOf="@+id/datetime_value" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modifyBtn"
                app:layout_constraintVertical_bias="0.08">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/sign_in_layout_1"
                    android:gravity="center"
                    android:background="@color/colorGrey"
                    android:orientation="vertical">

                    <com.telemedicine.myclinic.views.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/social_account_label"
                        android:text="@string/already_have_account"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <com.telemedicine.myclinic.views.LightButton
                        android:id="@+id/logon_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginTop="15dp"
                        android:onClick="onSignIn"
                        android:layout_gravity="start|center_horizontal"
                        android:background="@color/colorPrimary"
                        android:drawableRight="@drawable/right_arrow"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/sign_in_now"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="25dp"
                        android:textSize="14sp" />


                    <!-- <com.telemedicine.myclinic.views.RegularTextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/or_create_account_through"
                         android:gravity="center"
                         android:layout_marginBottom="15dp"
                         android:layout_marginTop="15dp"
                         android:textColor="@color/colorPrimary"
                         android:textSize="14sp" />-->

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.telemedicine.myclinic.views.BoldTextView
                    android:id="@+id/or_set_pass_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/social_btn_layout"
                    android:gravity="start"
                    android:visibility="gone"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:layout_marginTop="25dp"
                    android:text="@string/your_detail"
                    android:textColor="@color/colorPrussianBlue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/set_password_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_below="@+id/or_set_pass_label"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorLineGrey" />

                <com.telemedicine.myclinic.views.LightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/account_detail_hint"
                    android:visibility="gone"
                    android:layout_below="@+id/company_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:includeFontPadding="false"
                    android:text="@string/we_just_need_a_few_details_from_you"
                    android:textColor="@color/colorPrussianBlue"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/doctor_name" />

                <com.telemedicine.myclinic.views.BoldTextInputLayout
                    android:id="@+id/first_name_edt_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_border"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    app:hintTextAppearance="@style/hintSize11">

                    <com.telemedicine.myclinic.views.LightEdittext
                        android:id="@+id/first_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/first_name"
                        android:paddingStart="15dp"
                        android:paddingTop="4dp"
                        android:visibility="gone"
                        android:paddingEnd="15dp"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textDirection="locale"
                        android:textSize="14sp"
                        android:translationY="0dp" />

                </com.telemedicine.myclinic.views.BoldTextInputLayout>


                <com.telemedicine.myclinic.views.BoldTextInputLayout
                    android:id="@+id/middle_name_edt_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_border"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    app:hintTextAppearance="@style/hintSize11">

                    <com.telemedicine.myclinic.views.LightEdittext
                        android:id="@+id/middle_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/middle_name"
                        android:paddingStart="15dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="15dp"
                        android:visibility="gone"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textDirection="locale"
                        android:textSize="14sp"
                        android:translationY="0dp" />

                </com.telemedicine.myclinic.views.BoldTextInputLayout>

                <com.telemedicine.myclinic.views.BoldTextInputLayout
                    android:id="@+id/last_name_edt_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_border"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    app:hintTextAppearance="@style/hintSize11">

                    <com.telemedicine.myclinic.views.LightEdittext
                        android:id="@+id/last_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/last_name"
                        android:paddingStart="15dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="15dp"
                        android:visibility="gone"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textDirection="locale"
                        android:textSize="14sp"
                        android:translationY="0dp" />

                </com.telemedicine.myclinic.views.BoldTextInputLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">

                    <com.telemedicine.myclinic.views.BoldTextInputLayout
                        android:id="@+id/gender_til"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:background="@drawable/grey_border"
                        android:paddingTop="6dp"
                        android:layout_marginEnd="20dp"
                        android:paddingBottom="10dp"
                        android:layout_marginBottom="1dp"
                        app:hintTextAppearance="@style/hintSize11">

                        <com.telemedicine.myclinic.views.LightSpinnerEdittext
                            android:id="@+id/gender_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/down_arrow"
                            android:hint="@string/gender"
                            android:editable="false"
                            android:paddingLeft="15dp"
                            android:paddingTop="4dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="4dp"
                            android:layoutDirection="locale"
                            android:textDirection="locale"
                            android:textSize="14sp" />

                    </com.telemedicine.myclinic.views.BoldTextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="0.9">

                        <com.telemedicine.myclinic.views.BoldTextInputLayout
                            android:id="@+id/dateOfBirthEdt_til"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_border"
                            android:paddingBottom="5dp"
                            android:paddingTop="6dp"
                            app:hintTextAppearance="@style/hintSize11">

                            <com.telemedicine.myclinic.views.LightEdittext
                                android:id="@+id/dateOfBirthEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:drawableRight="@drawable/calendar"
                                android:editable="false"
                                android:hint="@string/date_of_birth"
                                android:paddingBottom="4dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="15dp"
                                android:paddingTop="4dp"
                                android:text=""
                                android:layoutDirection="locale"
                                android:textDirection="locale"
                                android:textSize="14sp"
                                android:translationY="0dp" />

                        </com.telemedicine.myclinic.views.BoldTextInputLayout>

                        <View
                            android:id="@+id/dateOfBirthEdt1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="3dp" />

                    </RelativeLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

<!--
                <com.telemedicine.myclinic.views.BoldTextInputLayout
                    android:id="@+id/phoneNumberEdt_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/grey_border"
                    android:paddingTop="6dp"
