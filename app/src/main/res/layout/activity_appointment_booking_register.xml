                <RelativeLayout
                    android:id="@+id/mobile_container"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_edt_til"
                    android:layoutDirection="ltr">

                    <com.telemedicine.myclinic.views.LightTextView
                        android:id="@+id/start_up_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="start"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="05"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.telemedicine.myclinic.views.BoldTextInputLayout
                        android:id="@+id/phoneNumberEdt_til"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/grey_border"
                        android:gravity="end"
                        android:paddingTop="5dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"
                        app:hintTextAppearance="@style/hintSize11">

                        <com.telemedicine.myclinic.views.LightEdittext
                            android:id="@+id/mobileNumberEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:hint="@string/mobile_number"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLength="8"
                            android:paddingStart="31dp"
                            android:paddingLeft="7dp"
                            android:paddingTop="5dp"
                            android:paddingRight="7dp"
                            android:textDirection="locale"
                            android:layoutDirection="locale"
                            android:paddingBottom="6dp"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="14sp" />
                    </com.telemedicine.myclinic.views.BoldTextInputLayout>


                    <com.telemedicine.myclinic.views.BoldCheckBox
                        android:id="@+id/imSaudi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:button="@drawable/check_box_drawable"
                        android:drawableTint="@color/colorPrimary"
                        android:text="@string/i_am_saudi"
                        android:textDirection="locale"
                        android:layoutDirection="locale"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_below="@+id/phoneNumberEdt_til"
                        android:theme="@android:style/Theme.Holo.Light" />

                </RelativeLayout>

                <com.telemedicine.myclinic.views.BoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/social_btn_layout"
                    android:gravity="start"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:text="@string/your_account"
                    android:textColor="@color/colorPrussianBlue"
                    android:textSize="15sp"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_below="@+id/or_set_pass_label"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorLineGrey" />

                <com.telemedicine.myclinic.views.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/company_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layoutDirection="locale"
                    android:visibility="gone"
                    android:textDirection="locale"
                    android:text="@string/we_will_create_account_for_your"
                    android:textColor="@color/colorPrussianBlue"
                    android:textSize="11sp" />


                <com.telemedicine.myclinic.views.BoldTextInputLayout
                    android:id="@+id/emailEdt_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/grey_border"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    app:hintTextAppearance="@style/hintSize11">

                    <com.telemedicine.myclinic.views.LightEdittext
                        android:id="@+id/emailEt"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:hint="@string/email"
                        android:paddingStart="15dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textDirection="locale"
                        android:textSize="14sp"
                        android:translationY="0dp" />

                </com.telemedicine.myclinic.views.BoldTextInputLayout>

                <com.telemedicine.myclinic.views.BoldTextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/password_till"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
