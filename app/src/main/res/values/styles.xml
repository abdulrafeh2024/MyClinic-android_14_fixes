        <item name="android:activityCloseExitAnimation">@anim/close_next_ar</item>


    </style>

    <style name="hintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="hintSize11" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/black_trans</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>


